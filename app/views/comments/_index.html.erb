<% comments.each do |comment| %>
  <% if comment.id.present? %>
    <div class="card">
      <div class="card-body comment">
        <div class="box icon_image">
          <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
            <div class="icon-image">
            <% if comment.user.icon? %>
              <label class = "icon_comment"><%= image_tag comment.user.icon.url %></label>
            <% else %>
              <label class = "icon_comment"><%= image_tag ("default_icon.png") %></label>
            <% end %>
            </div>
            <p><%= comment.user.name %>さん</p>
            <p class="left-box"> <%= comment.created_at.strftime('%Y/%m/%d %H:%M:%S') %></p>
          </div>
        <div class="box comment">
        <p><%= comment.content %></p>
        <p class="left-box"><%= link_to "コメント削除", comment_path(id:comment.task_id, comment_id:comment.id), method: :delete, remote: true, data: { confirm: "本当に削除しますか?"} %></p>
        </div>
      </div>
    </div>
  <% end %>
<% end %>


<style>
.box{
  display:flex;
  position:relative;
  width:100%;
}
.left-box{
  position:absolute;
  right:0;
  color:grey;
}
.card-body.comment{
  background-color:#fff;
}
.icon_comment img{
  margin-right: 10px;
}
</style>
