<% if @completed_count.empty? %>
	<div class = "container no-task">
    <div class="row">
			<div class="box">
				<h1>MVP</h1>
				<p class="col-lg-12 title">- チームに最も貢献した方を表彰します -</p>
				<p>
				まだひとつもタスクを実行していません😢<br />
				チームで分担してタスクを実行していきましょう!!🤝
				</p>
			</div>
		</div>
	</div>
<% else %>
	<div id="particles-js"></div>
		<div id="wrapper">
			<div class = "container">
				<div class="row">
					<div class="box">
						<h1>MVP</h1>
						<p class="col-lg-12 title">- チームに最も貢献した方 -</p>
						<h1 class="congrats">🎉Congratulations!!🎉</h1>
						<p>
							おつかれさまでした！<br>
							<% @maximum_completed_user.each do|user| %>
								<span class="text-green"><%= user %>さん</span>
							<% end %>
							<label>に労いの言葉をかけ、ご褒美を渡しましょう！</label>
						</p>
					<br />
					<label>最もチームに貢献した人</label><br />
					<% @maximum_completed_user.each do|user| %>
						<span class="text-green mvp"><%= user %>さん</span></br>
					<% end %>
					<div class="delete-btn">
						<%= button_to '完了したタスクを削除する', mvp_delete_team_path(@team), method: :delete, data: { confirm: '削除して良いですか？' } %>
						<p class="small">「繰り返し」にチェックを入れていない、実行済みのタスクを削除できます</p>
					</div>
				</div>
			</div>
		</div>
	<% end %>
</div>



