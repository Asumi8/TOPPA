<h1>Teams</h1>

<table>
  <thead>
    <tr>
      <th>所属チーム</th>
      <th></th>
      <th>チームのタスク</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% current_user.teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= link_to 'チームの詳細', team_path(team.id) %></td>
        <td><%= team.tasks.name %></td>
        <td><%= link_to 'チームのタスク', team_tasks_path(team.id) %></td>
      </tr>
    <% end %>
    <% current_user.team_members.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= link_to 'チームの詳細', team_path(team.id) %></td>
        <td><%= team.tasks.name %></td>
        <td><%= link_to 'チームのタスク', team_tasks_path(team.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

