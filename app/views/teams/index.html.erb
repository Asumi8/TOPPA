<div class = "container">
  <div class="container-fluid">
    <div class="row">
      <h1 class="col-lg-6">team/task</h1>
      <%= link_to '新しいチームを作成', new_team_path %>

      <p class="col-lg-12 title">所属しているチームとタスクの一覧</p>

      <% current_user.team_members.each do |team| %>
      <div class="col-lg-6">
        <div class="card">
          <div class="card-header bg-primary"></div>
          <h6 class="card-title"><%= team.name %></h6>
          <div class="card-body">
            <%= link_to 'チームの詳細', team_path(team.id) %>
            <span class="btn btn-secondary">
              <%= link_to 'チームのタスク', team_tasks_path(team.id) %>
            </span>
          </div>
        </div>
      </div>
      <% end %>

    </div>
  </div>
</div>

