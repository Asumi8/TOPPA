<div class = "container">
  <div class = "card">
    <div class = "card-body">
      <div class="container-fluid">
        <div class="row">
          <h1>My Team / My Task</h1>
          <p class="col-lg-12 title">- 所属しているチームとタスクの一覧 -</p>

          <div class="row justify-content-center">
            <button class="btn btn-red col-5">

              <%= link_to new_team_path, id:'rspec-team-new' do %><i class="bi bi-person-square"></i>新しいチームを作成<% end %>
            </button>
          </div>

          <% current_user.team_members.each do |team| %>
            <div class="col-lg-6 col-md-12">
              <div class="card-team">
                <div class="card-header bg-primary"></div>
                  <h6 class="card-title"><%= team.name %></h6>
                  <div class="card-body-team row">
                    <div class="d-flex justify-content-center">
                      <span class="btn btn-outline-success col-md-6">
                        <%= link_to team_path(team.id) do %><i class="bi bi-people-fill"></i>チームの詳細<% end %>
                      </span>
                      <span class="btn btn-secondary col-md-6">
                        <%= link_to team_tasks_path(team.id), id:'rspec-task-index' do %><i class="bi bi-list-task"></i>チームのタスク<% end %>
                      </span>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.icon-img{
  text-align:center;
}
.text-green strong{
  color:#4E889A;
  font-weight:bold;
}
.btn-red, .btn-red a{
  color:#fff;
}
.card-team{
  background-color: #fff;
  margin: 10px;
  color:#50595B;
  border-radius:5px;
}
.card-body-team{
  padding:1.25rem;
  color:#50595B;
}
.btn-outline-success{
  margin-right:5px;
}
.btn-outline-success a{
  color:#4F92C2;
  font-weight:15px;
}
.btn-outline-success a:hover{
  color:#fff;
}
.card-title{
  text-align:center;
  margin:5px 0;
}
.card-header{
  height:8px;
}
.btn.btn-secondary a{
  color:white;
  font-weight:bold;
  padding-left:10px;
  font-size:15px;
}
.title{
  text-align:center;
  font-size:18px;
}
.card{
  background-color:#ECDDD6;
  border: #fff;
  padding: 10px;
}
.card-body{
  padding:1.25rem;
  color:#50595B;
}
</style>