<%= form_with(model: team) do |form| %>

  <% if team.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(team.errors.count, "件") %><%= t('activerecord.errors.errors_message')%></h2>

      <ul>
        <% team.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <p>
    <%= form.label :name %><span class="required"> *必須</span><br />
    <%= form.text_field :name %>
    </p>
  </div>

  <div class="field">
    <p>
    <%= form.label :reward %><br />
    <%= form.text_field :reward %>
    </p>
  </div>

  <div class="field">
  <p>
    <%= form.label :period %><br />
    <%= form.date_field :period %>
    </p>
  </div>

  <div class="actions">
  <p>
    <%= form.submit %>
    </p>
  </div>
<% end %>
</div>



<style>
.required{
  color:#c24474;
}
input {
  width:100%;
}
</style>
