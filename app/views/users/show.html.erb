<div class = "container">
  <div class="row justify-content-center">
    <div class="col-8">
      <div class = "card">
        <div class="card-body">
          <h1>Profile</h1>
          <p class="col-lg-12 title">- プロフィール -</p>
          <div class="container-fluid">
            <div class="row profile-body">
              <div class="col-md col-lg-4 icon-img">
                <% if @user.icon? %>
                  <p>
                    <label class = "icon"><%= image_tag @user.icon.url %></label>
                <% else %>
                    <label class = "icon"><%= image_tag ("default_icon.png")  %></label>
                  </p>
                <% end %>
              </div>
              <div class="col-md-8 col-lg">
              <table>
                <tr>
                  <th class="text-green">ユーザー名</th>
                  <td><%= @user.name %></td>

                </tr>
                <tr>
                  <th class="text-green">emailアドレス</th>
                  <td><%= @user.email %></td>
                </tr>
              </table>

              <button type="button" class="btn btn-secondary">
                <%= link_to "Profileを編集する", edit_user_registration_path(@user) %>
              </button>
              <p class="small"><i class="bi bi-hand-index"></i>アイコンの設定はこちらから</p>
              </div>
            </div>
            <hr />

            <h4 class="text-green">所属しているチーム</h4>
            <% if current_user.teams.first.present? || current_user.team_members.first.present? %>
              <% current_user.team_members.each do |team| %>
                <ul>
                  <li>
                    <i class="bi bi-play-fill text-green"></i><%= team.name %>
                  </li>
                </ul>
              <% end %>
            <% else %>
              <%= link_to "チームに所属する", new_team_path %><br>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.card{
  background-color:#ECDDD6;
  border: #fff;
  padding: 10px;
  margin-top:20px;
}
.title{
  text-align:center;
  font-size:18px;
  color:#524f4f;
  margin-bottom:20px;
}
.icon-img{
  text-align:center;
}

.btn-secondary a{
  color:white;
  font-weight:bold;
  padding-left:10px;
}
.text-green{
  color:#4E889A;
  font-weight:bold;
}
.profile-body{
  background-color:#fff;
  padding:25px 0;
  border-radius:5px;
}
table{
  border-collapse: separate;
  border-spacing: 5px 8px;
  margin-bottom:10px;
}
td{
  font-size:16px;
}
</style>