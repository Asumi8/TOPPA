<% if task.status %>
  <%= link_to update_status_task_path(task.id, team_id: task.team_id), id: "change-status-link-#{task.id}", remote:true, method: :patch do %>
    <label class = "checkbox"><%= image_tag ("icon_true_green.png") %></label>
  <% end %>
<% else %>
  <%= link_to update_status_task_path(task.id, team_id: task.team_id), id: "change-status-link-#{task.id}", remote:true, method: :patch do %>
    <label class = "checkbox"><%= image_tag ("icon_false_green.png") %></label>
  <% end %>
<% end %>
